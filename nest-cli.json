{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      { "include": "resources/config/*.yaml", "outDir": "./dist" },
      { "include": "resources/templates/**/*", "outDir": "./dist" }
    ],
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": false
        }
      }
    ],
    "watchAssets": true
  }
}
